{
  "compilerOptions": {
    "strictNullChecks": false,
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "webpack-env",
      "jest",
      "vuetify",
      "vue-meta"
    ],
    "paths": {
      "@/*": [
        "apps/benef-app/src/*"
      ]
    },
    "lib": [
      "es6",
      "es2017",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },

  "include": [
    "apps/benef-app/src/**/*.ts",
    "apps/benef-app/src/**/*.tsx",
    "apps/benef-app/src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
  ],
  "exclude": [
    "node_modules"
  ]
}
