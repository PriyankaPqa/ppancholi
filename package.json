{
  "name": "root",
  "private": true,
  "devDependencies": {
    "@lokalise/node-api": "^2.0.1",
    "@babel/core": "7.17.5",
    "@testing-library/jest-dom": "^5.11.10",
    "@types/jest": "^26.0.22",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "@vue/cli-plugin-unit-jest": "^4.5.15",
    "@vue/cli-service": "4.5.15",
    "@vue/eslint-config-airbnb": "^5.0.2",
    "@vue/eslint-config-typescript": "^8.0.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^26.6.3",
    "cobertura-merge": "^1.0.3",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-vue": "7.20.0",
    "eslint-plugin-vuejs-accessibility": "^0.6.0",
    "eslint": "^7.23.0",
    "flush-promises": "^1.0.2",
    "fs-jetpack": "^4.3.1",
    "husky": ">=6",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.5.3",
    "jest-docblock": "^26.0.0",
    "jest-runner": "^26.6.3",
    "jest-runner-groups": "^2.1.0",
    "jest-serializer-vue": "^2.0.2",
    "jest-transform-stub": "^2.0.0",
    "jest-trx-results-processor": "^2.2.0",
    "lerna": "^4.0.0",
    "lerna-update-wizard": "^1.1.1",
    "lint-staged": ">=10",
    "regenerator-runtime": "^0.13.9",
    "ts-jest": "^26.5.4",
    "typescript": "4.2.3",
    "vue": "2.6.14",
    "vue-jest": "^4.0.1",
    "vue-template-compiler": "2.6.14",
    "webpack": "^4.44.2",
    "yarn-run-all": "^3.1.1",
    "unzipper": "^0.10.5"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "clean": "lerna clean",
    "clean:all": "rm -rf node_modules && lerna clean",
    "lerna:list": "lerna list --all",
    "test": "jest --runInBand",
    "lint": "yarn workspaces run lint",
    "lerna:update": "lernaupdate",

    "emis-app:build": "yarn --cwd apps/emis-app build",
    "emis-app:serve": "yarn --cwd apps/emis-app serve",
    "emis-app:lint": "yarn --cwd apps/emis-app lint",
    "emis-app:test": "yarn jest --projects apps/emis-app --runInBand",
    "emis-app:coverage": "yarn emis-app:test --coverage",
    "emis-app:i18n-report": "node tools/scripts/i18n-report.js 'apps/emis-app/src/ui/lang/emis/en.json','apps/emis-app/src/ui/lang/registration/en.json' 'apps/emis-app/src'",
    "emis-app:lokalise": "yarn --cwd apps/emis-app lokalise",

    "benef-app:build": "yarn --cwd apps/benef-app build",
    "benef-app:serve": "yarn --cwd apps/benef-app serve",
    "benef-app:lint": "yarn --cwd apps/benef-app lint",
    "benef-app:test": "yarn jest --projects apps/benef-app --runInBand",
    "benef-app:coverage": "yarn benef-app:test --coverage",
    "benef-app:i18n-report": "node tools/scripts/i18n-report.js 'apps/benef-app/src/ui/lang/en.json' 'apps/emis-app/src'",
    "benef-app:lokalise": "yarn --cwd apps/benef-app lokalise",

    "registration-lib:lint": "yarn --cwd libs/registration-lib lint",
    "registration-lib:test": "yarn jest --projects libs/registration-lib --runInBand",
    "registration-lib:coverage": "yarn registration-lib:test --coverage",
    "registration-lib:i18n-report": "node tools/scripts/i18n-report.js 'libs/registration-lib/src/ui/lang/en.json' 'libs/registration-lib/src'",

    "prepare": "husky install"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "libs/*"
    ]
  },
  "lint-staged": {
    "**/*.+(js|jx|ts|tsx|css|vue)": [
      "eslint --fix --max-warnings=0"
    ]
  }
}
