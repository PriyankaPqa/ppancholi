{
  "compilerOptions": {
    "strictNullChecks": false,
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "declaration": true,
    "declarationDir": "dist",
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "rootDir": ".",
    "baseUrl": ".",
    "allowJs": true,
    "types": [
      "jest",
      "vuetify",
      "vite/client",
      "node"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@libs/shared-lib/*": [
        "../../libs/shared-lib/src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "typings/**.ts",
  ]

}
